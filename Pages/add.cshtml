@page
@model WebApplication1.Pages.Fans.addModel
@{
}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/reg.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />*@
</head>




<body>
        <div class="container2">
            <div class="title">Registration</div>
            <div class="content">
                @if (Model.successmessage.Length > 0)
                        {
                            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                                <strong>@Model.successmessage</strong>
                                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                            </div>
                        }
                        @if (Model.errormesssage.Length > 0)
                        {
                            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                                <strong>@Model.errormesssage</strong>
                                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                            </div>
                        }

                <form method="POST">
                    <div class="user-details">
                        <div class="input-box">
                            <span class="details">Full Name</span>
                            <input type="text" placeholder="Enter your name" name="fullname" required value="@Model.fan.fullname">
                        </div>
                        <div class="input-box">
                            <span class="details">Username</span>
                        <input type="text" placeholder="Enter your username" name="username" required value="@Model.fan.username">
                        </div>
                        <div class="input-box">
                            <span class="details">E-Mail</span>
                        <input type="text" placeholder="Enter your email" name="email" required value="@Model.fan.email">
                        </div>
                        <div class="input-box">
                            <span class="details">Phone-Number</span>
                        <input type="text" placeholder="Enter your number" name="phone" required value="@Model.fan.phone">
                        </div>
                        <div class="input-box">
                            <span class="details">Nationality</span>
                        <input type="text" placeholder="Enter your nationality" name="nationality" required value="@Model.fan.nationality">
                        </div>
                        <div class="input-box">
                            <span class="details">Password</span>
                        <input type="password" placeholder="Enter your password" name="password" required value="@Model.fan.password">
                        </div>
                    </div>

                    <div class="button">
                        <input type="submit" value="Register">
                    </div>
                </form>
            </div>
        </div>
</body>