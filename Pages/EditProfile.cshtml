@page
@model DBProjectClone.Pages.EditProfileModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
    <link href="~/css/editprofile.css" rel="stylesheet" />


@if (Model.errormesssage.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role="alert">
        <strong> @Model.errormesssage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

@if (Model.successmessage.Length > 0)
{
    <div class='alert alert-success alert-dismissible fade show' role='alert'>
        <strong>@Model.successmessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<body>
    <div class="container2">
        <div class="title">Update Profile</div>
        <div class="content">
            <form method="POST">
                <div class="user-details">
                    <h6 class="heading-medium text-muted mb-4">User information</h6>
                    <div class="input-box">
                        <span class="details">Full name</span>
                        <input type="text" value="@Model.User.fullname" name="fullname" value="@Model.User2.fullname">
                    </div>
                    <div class="input-box">
                        <span class="details">Username</span>
                        <input type="text" value="@Model.User.username" name="username" value="@Model.User2.username" readonly>
                    </div>
                    <div class="input-box">
                        <span class="details">E-Mail</span>
                        <input type="text" value="@Model.User.email" name="email" value="@Model.User2.email">
                    </div>
                    <h6 class="heading-small text-muted mb-4">Contact information</h6>
                    <div class="input-box">
                        <span class="details">Phone-Number</span>
                        <input type="text" value="@Model.User.phone" name="phone" value="@Model.User2.phone">
                    </div>
                    <div class="input-box">
                        <span class="details">Nationality</span>
                        <input type="text" value="@Model.User.nationality" name="nationality" value="@Model.User2.nationality">
                    </div>
                    <div class="input-box">
                        <span class="details">Password</span>
                        <input type="text" value="@Model.User.password" name="password" value="@Model.User2.password">
                    </div>
                </div>
                <div class="button">
                    <input data-role="button" type="submit" value="Update" >
                </div>     
            </form>
        </div>
    </div>
</body>

