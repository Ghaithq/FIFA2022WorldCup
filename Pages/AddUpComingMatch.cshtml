<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />


<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-center h-100">
        
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
                        @if (TempData["errorMsg"]!=null && TempData["errorMsg"].ToString().Length > 0)
                        {
                            
                            <div class="alert alert-danger" role="alert">
                             @TempData["errorMsg"]
                            </div>
                        }
                        


                        @if (TempData["successMsg"]!=null && TempData["successMsg"].ToString().Length > 0)
                        {
                            <div class="alert alert-success" role="alert">
                             @TempData["successMsg"]
                            </div>
                        }

            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Add UpComing Match</h3>
            <form method="POST">

              <div class="row">
                <div class="col-md-6 mb-4">
                  <div class="form-outline">
                    <input type="text" name="MatchID" class="form-control form-control-lg" value="@Model.match.ID" />
                    <label class="form-label" for="MatchID">Match ID</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  @*<div class="form-outline">
                    <input type="text" name="Stage" class="form-control form-control-lg" value="@Model.match.stage" />
                    <label class="form-label" for="Stage">Stage</label>
                  </div>*@

                  <div class="form-outline">
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="Stage" name="Stage">
@*                      <option selected>Open this select menu</option>
*@                      <option value="32">32</option>
                        <option value="16">16</option>
                        <option value="8">8</option>
                        <option value="4">4</option>
                        <option value="2">2</option>
                    </select>
                    <label class="form-label" for="Team2">Stage</label>
                  </div>



                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 d-flex align-items-center">

                  <div class="form-outline datepicker w-100">
@*                    <input type="text" class="form-control form-control-lg" name="MatchDate" value="@Model.match.DateTime" />
                        
*@                     
                        <input type="text" id="txtDate" name="MatchDate" class="form-control" autocomplete="off" value="@Model.match.DateTime" />
                    <label for="matchDate" class="form-label">Match Date</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline datepicker w-100">
                     <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example"  style="margin:0rem" id="Stadium" name="Stadium">
                        @foreach(object item in Model.StadiumsUp)
                                            {
                                                <option value=@item>@item</option>
                                            }
                                        </select>
                    <label class="form-label" for="Stadium">Stadium</label>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="Team1" name="Team1">
                        @foreach(object item in Model.Teams)
                                            {
                                               <option value=@item>@item</option> 
                                            }
                                        </select>
                    <label class="form-label" for="Team1">Team1</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="Team2" name="Team2">
                        @foreach(object item in Model.Teams)
                                            {
                                               <option value=@item>@item</option> 
                                            }
                    </select>
                    <label class="form-label" for="Team2">Team2</label>
                  </div>

                </div>
              </div>

              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="Referee1" name="Referee1">
                         @foreach(var item in Model.referees)
                                            {
                                               <option value=@item.id>@item.name</option> 
                                            }
                    </select>
                    <label class="form-label" for="Referee1">Referee1</label>
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                  <div class="form-outline">
                    <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" id="Referee2" name="Referee2">
                         @foreach(var item in Model.referees)
                                            {
                                               <option value=@item.id>@item.name</option> 
                                            }
                    </select>
                    <label class="form-label" for="Referee2">Referee2</label>
                  </div>

                </div>
              </div>

              @*formatting buttons*@
              <div class="row">
                <div class="col-md-6 mb-4 pb-2">

                  <div class="mt-4 pt-2">
                    <input class="btn btn-primary btn-lg" type="submit" value="Add" />
                  </div>

                </div>
                <div class="col-md-6 mb-4 pb-2">

                  <div class="mt-4 pt-2">
                        <a href="/Index" class="btn btn-danger btn-lg" role="button">Cancel</a>
                  </div>
                </div>
              </div>




            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>



